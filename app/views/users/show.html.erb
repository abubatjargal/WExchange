<%= render 'layouts/navigation' %>
<div class="container">

  <div class="name">
    <h1><%= @name %></h1>
  </div>
  <br />
  <div class="left side">
    <div class="col s5">
        <div class="profile-img">
          <%= image_tag "dummy.png", :alt => "Profile Picture", id:"pro-picture", class:"col s3" %>
        </div>
        <%= render 'user_rating' %>
        <%if current_user.id!=params[:id].to_i%>
            <%= render 'request_message' %>
        <%end%>
    </div>
  </div>
  <div class="right side">
    <div class="col s7">
      <div class="bio">
        <div class="row">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title">About Me</span>
                    <p><%@user.biography%></p>
              </div>
          </div>
        </div>
        <%= render 'portfolio' %>
      </div>
    </div>

  </div>
</div>
