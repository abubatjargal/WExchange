<div class="container login-container row">
  <%= form_for(:session, url: login_path) do |f| %>
      <div class="input-field custom-input-field col s6 offset-s3" type="text" class="validate">
        <%= f.label :username %>
        <%= f.email_field :username, class: 'form-control' %>
      </div>

      <div class="input-field custom-input-field col s6 offset-s3" type="text" class="validate">
        <%= f.label :password %>
        <%= f.email_field :password, class: 'form-control' %>
      </div>

      <div class="col s12 center">
        <%= link_to "Login", root_path, target: "_self", class: "active waves-effect waves-light btn" %>
        <br />
         <br />
        New user? <%= link_to "Sign up now!", signup_path %>
      </div>


    <% end %>


</div>
