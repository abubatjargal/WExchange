<div class="panel panel-default">
	<div class="panel-heading">
    <h1>Create a Request!</h1>
	</div>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for (@request) do |f| %>
	        <%= f.text_field :amount, placeholder: "Price", class: "form-control" %>
	        <%= f.button :submit , name: 'id', value: params[:id]%>
      <% end %>
    </div>
  </div>
</div>
</div>
