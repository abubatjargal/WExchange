<% provide(:title, 'Sign up') %>
<%= render :partial => "layouts/settings_side_bar" %>
<div class="wrapper">

<div class="row">

  <div class="col s12 m6 offset-m3 center">
    <%= form_for(@user) do |f| %>

     <p>
      <input name="group1" type="radio" id="Visa" />
      <label for="test1">Visa</label>
    </p>
    <p>
      <input name="group1" type="radio" id="Mastercard" />
      <label for="test2">Mastercard</label>
    </p>
  
      <div class="input-field">
        <%= f.label "Card Number" %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="row">
	<div class="input-field col s8">
          <%= f.label "Expiration Date" %>
          <%= f.text_field :last_name, class: 'form-control' %>
	</div>

	<div class="input-field col s3">
          <%= f.label "Security Code" %>
          <%= f.text_field :last_name, class: 'form-control' %>
	</div>
      </div>

       <div class="input-field">
        <%= f.label "Name on Card" %>
        <%= f.text_field :last_name, class: 'form-control' %>
       </div>

       <div class="input-field">
        <%= f.label "Street Address 1" %>
        <%= f.text_field :last_name, class: 'form-control' %>
       </div>

       <div class="input-field">
        <%= f.label "Street Address 2" %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>

       <div class="row">
	 <div class="input-field col s6">
           <%= f.label "City" %>
           <%= f.text_field :last_name, class: 'form-control' %>
	 </div>

	 <div class="input-field col s3">
           <%= f.label "State" %>
           <%= f.text_field :last_name, class: 'form-control' %>
	 </div>
	 <div class="input-field col s3">
           <%= f.label "Zip Code" %>
           <%= f.text_field :last_name, class: 'form-control' %>
	 </div>
       </div>
      <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>
  </div>

</div>
</div>

